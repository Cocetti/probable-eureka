    private String login(){
        String input = "";
        
        input = tfAnvandare.getText();
        return input;
    }
    
    private String loginPw(){
        String input = "";
        input = jPasswordField1.getText();
        return input;
    }
    
    private void Login(){
        String login = login();
        String login1 = loginPw();
        
        if (login.equals(login1)){
            System.out.println("Du Ã¤r nu inloggad");
        }
    }
    
